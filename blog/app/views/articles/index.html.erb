<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
        <!--article_path helper returns "/articles/#{article.id}" 
        when given an article. We can use it to tidy up our links 
        in app/views/articles/index.html.erb:!-->
      <a href="<%= article_path(article) %>">
        <%= article.title %>
      </a>
    </li>
  <% end %>
</ul>
